{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "paths": {
            "@/lib/*": ["src/lib/*"],
            "@/pages/*": ["src/pages/*"]
        },
        "importsNotUsedAsValues": "remove"
    },
    "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"]
}
